<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorFekete">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cim"
            android:textSize="@dimen/cim_szoveg_meret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorHangsulyos"
            android:text="@string/nevjegy" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/nevjegysz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorVilagosSzurke"
            android:text="@string/nevjegy_szoveg"
            android:layout_below="@+id/cim"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>